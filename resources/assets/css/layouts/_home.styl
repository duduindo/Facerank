$keyframe-name = escolhendo-alterando
@keyframes {$keyframe-name}
  for i in 0..10
    {10% * i}
      opacity (i/10)

#escolhe
  background-color red
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  flex-direction column

  .escolhe-filhas
    width 100%

  .escolhe-filhas-galeria
    background-color tomato
    height 100%
    position relative

  .escolhe-filhas-botoes
    background-color green
    height 60px

/**
  Onde as fotos ser√£o escolhidas
**/
.escolhe-filhas-galeria
  .escolhendo
    bottom 5%
    height 80%
    position absolute
    right 5%
    width 80%
    z-index 1
    -webkit-transition all .10s
    transition all .10s

    &:nth-of-type(1)
      background-color blue
    &:nth-of-type(2)
      background-color purple

  .escolhendo__ativo
    -webkit-animation escolhendo-alterando .10s
    animation escolhendo-alterando .10s
    bottom 25%
    height 70%
    right 25%
    width 70%
    z-index 2
